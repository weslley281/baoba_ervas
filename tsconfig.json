{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  }
}
